    "target": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "declarationDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
     "sourceMap": true
  },
  "exclude": [
    "node_modules",
